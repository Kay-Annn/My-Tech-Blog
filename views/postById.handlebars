<div class="updatePost">
  <div class="card bg-light mb-3">
    <div class="card-header bg-warning">Created by {{posts.User.username}} on {{posts.created_at}}</div>
    <div class="title-updatepost">{{posts.title}} </div>
    <div class="card-body">
      <p class="card-text content-updatepost">{{posts.content}}</p>
    </div>
    <div class="d-flex justify-content:center ">
      <button class="bg-warning">Update Post</button>
      <button class="bg-warning">Delete Post</button>
    </div>
  </div>
</div>

<script src="/js/update.js"></script>
